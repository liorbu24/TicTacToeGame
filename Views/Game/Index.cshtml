@model TicTacToeGame.Models.GameState
@{
    ViewData["Title"] = "משחק איקס עיגול";
}

<!-- Lobby Screen -->
<div id="lobby-screen" class="lobby-container">
    <h1 class="game-title">משחק איקס עיגול</h1>
    <h2 class="game-subtitle">עם לוח מתרחב!</h2>
    
    <div class="lobby-card">
        <div class="input-group">
            <label for="player-name">השם שלך:</label>
            <input type="text" id="player-name" placeholder="הכנס שם..." maxlength="20" />
        </div>
        
        <div class="lobby-section">
            <h3>שחק נגד חבר מרחוק</h3>
            <button id="create-room-btn" class="btn btn-primary">צור חדר חדש</button>
            
            <div class="divider">או</div>
            
            <div class="join-room-group">
                <input type="text" id="room-code-input" placeholder="הכנס קוד חדר" maxlength="6" />
                <button id="join-room-btn" class="btn btn-secondary">הצטרף</button>
            </div>
        </div>
        
        <div class="divider divider-large">או</div>
        
        <div class="lobby-section">
            <h3>שחק מקומי</h3>
            <button id="local-play-btn" class="btn btn-outline">שני שחקנים על אותו מכשיר</button>
        </div>
    </div>
    
    <div class="rules lobby-rules">
        <h3>חוקי המשחק:</h3>
        <ul>
            <li>השג 3 ברצף (אופקי, אנכי או אלכסוני) כדי לנצח</li>
            <li>אם הלוח מתמלא ללא מנצח - הלוח מוכפל!</li>
            <li>גודל הלוח: 3x3 → 6x6 → 12x12 → 24x24...</li>
        </ul>
    </div>
</div>

<!-- Game Screen -->
<div id="game-screen" class="game-container" style="display: none;">
    <h1 class="game-title">משחק איקס עיגול</h1>
    
    <!-- Room Code Display -->
    <div id="room-code-display" class="room-code-display" style="display: none;">
        <span>קוד החדר:</span>
        <span id="room-code-text" class="room-code"></span>
        <button id="copy-code-btn" class="btn-small">העתק</button>
    </div>
    
    <div class="game-info">
        <div class="info-card">
            <span class="info-label">גודל לוח:</span>
            <span id="board-size" class="info-value">3x3</span>
        </div>
        <div class="info-card">
            <span class="info-label">אתה:</span>
            <span id="player-symbol" class="info-value player-x">X</span>
        </div>
        <div class="info-card">
            <span class="info-label">תור:</span>
            <span id="current-player" class="info-value player-x">X</span>
        </div>
        <div class="info-card">
            <span class="info-label">יריב:</span>
            <span id="opponent-name" class="info-value">-</span>
        </div>
    </div>

    <div id="message" class="message">מחכה ליריב...</div>

    <div id="board-container" class="board-container">
        <!-- Board will be generated by JavaScript -->
    </div>

    <div class="game-buttons">
        <button id="new-game-btn" class="new-game-btn" style="display: none;">משחק חדש</button>
        <button id="leave-room-btn" class="btn btn-outline btn-small-text">עזוב משחק</button>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/game.js"></script>
}
