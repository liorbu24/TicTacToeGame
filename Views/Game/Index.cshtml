@model TicTacToeGame.Models.GameState
@{
    ViewData["Title"] = "משחק איקס עיגול";
}

<div class="game-container">
    <h1 class="game-title">משחק איקס עיגול</h1>
    <h2 class="game-subtitle">עם לוח מתרחב!</h2>
    
    <div class="game-info">
        <div class="info-card">
            <span class="info-label">גודל לוח:</span>
            <span id="board-size" class="info-value">3x3</span>
        </div>
        <div class="info-card">
            <span class="info-label">תור:</span>
            <span id="current-player" class="info-value player-x">X</span>
        </div>
    </div>

    <div id="message" class="message">תור השחקן: X</div>

    <div id="board-container" class="board-container">
        <!-- Board will be generated by JavaScript -->
    </div>

    <button id="new-game-btn" class="new-game-btn">משחק חדש</button>

    <div class="rules">
        <h3>חוקי המשחק:</h3>
        <ul>
            <li>השג 3 ברצף (אופקי, אנכי או אלכסוני) כדי לנצח</li>
            <li>אם הלוח מתמלא ללא מנצח - הלוח מוכפל!</li>
            <li>גודל הלוח: 3x3 → 6x6 → 12x12 → 24x24...</li>
        </ul>
    </div>
</div>

@section Scripts {
    <script src="~/js/game.js"></script>
}
